{
  "name": "svelte-component",
  "description": "Template for a ready-to-publish Svelte component.",
  "version": "0.1.0",
  "author": {
    "name": "himynameisdave",
    "email": "d@velunny.com",
    "url": "https://himynameisdave.com"
  },
  "type": "module",
  "main": "./dist/index.js",
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "npm run package",
    "typecheck": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "lint": "eslint . --ext .js,.ts,.svelte",
    "lint:fix": "eslint . --ext .js,.ts,.svelte --fix",
    "test": "npm run test:unit && npm run test:integration",
    "test:integration": "playwright test",
    "test:unit": "vitest --run",
    "test:unit:watch": "vitest",
    "release": "npm run package && np --no-yarn"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "engines": {
    "node": ">= 18"
  },
  "lint-staged": {
    "*.ts": "eslint ./ --fix --quiet",
    "*.svelte": "eslint ./ --fix --quiet"
  },
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@sveltejs/adapter-auto": "^2.1.1",
    "@sveltejs/kit": "^1.27.6",
    "@sveltejs/package": "^2.2.3",
    "eslint-config-himynameisdave": "^8.4.0",
    "husky": "^8.0.3",
    "less": "^4.2.0",
    "lint-staged": "^15.1.0",
    "np": "^8.0.4",
    "publint": "^0.2.5",
    "svelte": "^4.2.7",
    "svelte-check": "^3.6.1",
    "tslib": "^2.6.2",
    "typescript": "^5.3.2",
    "vite": "^5.0.2",
    "vitest": "^1.2.1"
  },
  "keywords": [
    "svelte",
    "component",
    "frontend",
    "svelte-components"
  ],
  "private": false
}
